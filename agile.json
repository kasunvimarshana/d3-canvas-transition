{
    "shell": {
        "test": {
            "command": [
                "npm test"
            ]
        },
        "build": {
            "command": [
                "npm test",
                "./node_modules/.bin/uglifyjs ./build/d3-canvas-transition.js -c -m -o ./build/d3-canvas-transition.min.js"
            ]
        },
        "zip": {
            "command": [
                "zip -j build/d3-canvas-transition.zip -- LICENSE README.md build/*.js"
            ]
        },
        "clean": {
            "command": ["rm -rf build"]
        }
    },
    "s3": {
        "options": {
            "bucket": "quantmind-public"
        },
        "d3-canvas-transition": {
            "files": {
                "build/*.js": "d3-canvas-transition/{{ package.version }}/"
            }
        }
    },
    "watch": {
        "d3-canvas-transition": {
            "files": [
                "src/*.js",
                "test/*.js",
                "index.js"
            ],
            "command": "test"
        }
    },
    "tasks": {
        "clean": {
            "description": "Remove build files and directories",
            "command": ["shell:clean"]
        },
        "test": {
            "description": "Eslint, rollup and test",
            "command": ["shell:test"]
        },
        "build": {
            "description": "Run tests and create the build/d3-canvas-transition.js files",
            "command": ["shell:build"]
        },
        "release": {
            "description": "Make a new release",
            "command": ["build", "shell:zip", "s3:d3-canvas-transition"]
        },
        "serve": {
            "description": "Starts development server",
            "command": ["watch"]
        }
    }
}
